<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <p>タイトル:<%= @picture.title %></p>
  <p>内容:<%= @picture.content %></p>
  <p>画像:<%= image_tag(@picture.image.url, style: 'width: 200px; height: 180px;') if @picture.image && @picture.image.url %></p>
  <%= form.hidden_field :image_cache %>
  <%= form.submit  "登録する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>